@model GoPlay.Models.FriendRequestEmail
<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>PlayToken - Friend Request</title>

    <style media="screen" type="text/css">
        *:after,
        *:before {
            box-sizing: border-box;
        }

        body {
            background: black;
            margin: 0;
            padding: 0;
            font-family: Ubuntu, Arial, Helvetica, sans-serif;
        }

        .header {
            position: relative;
            z-index: 100;
            background-color: #24252A;
            box-shadow: 0px 1px 0px 0px rgba(40,43,48,0.9),0px 3px 8px 0px rgba(0,0,0,0.76);
            padding: 20px 0px;
        }

        .row {
            margin: 0 auto;
            padding: 0;
            max-width: 768px;
            width: 100%;
        }

        .content {
            width: 100%;
        }

        .columns {
            position: relative;
            float: left;
            padding: 0 16px;
        }

        .row .before,
        .row .after {
            content: '';
            display: table;
        }

        .row .after {
            clear: both;
            width: 100%;
        }

        .sect-title-bar,
        .sect-end-bar {
            position: relative;
            background-image: linear-gradient(0deg, #41444F 0%, #2E3337 100%);
            box-shadow: 0px 2px 6px 0px rgba(0,0,0,0.50), inset 0px 0px 2px 0px rgba(0,0,0,0.50), inset 0px 2px 6px 0px #4E5155;
            display: block;
        }

        .sect-title-bar {
            height: 46px;
            padding: 12px 12px;
            box-sizing: border-box;
            z-index: 1;
        }

        h6.sect-title {
            color: #F2C737;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-size: 14px;
            margin-top: 4px;
            margin-bottom: 0;
        }

        .sect-end-bar {
            height: 10px;
        }

        .sect-panel {
            position: relative;
            background: #17181B;
            box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.50), inset 0px 1px 0px 0px #3C3C3C, inset 0px 2px 6px 0px rgba(0,0,0,0.50);
            display: block;
            padding: 20px 12px;
        }

        .content-container {
            padding: 24px 0 70px;
        }

            .content-container h3 {
                color: #b7b7b7;
                font-size: 18px;
                margin: 0;
                font-weight: 500;
            }

                .content-container h3 i {
                    color: #F4C916;
                    font-style: normal;
                    font-weight: 600;
                }

            .content-container h4 {
                color: #b7b7b7;
                font-size: 18px;
                margin: 16px 0;
                font-weight: 500;
            }

            .content-container p {
                font-size: 14px;
                color: #b7b7b7;
                margin: 0;
            }

                .content-container p a {
                    color: #518DB8;
                    text-decoration: none;
                }

        .show-user {
            width: auto;
            min-width: 260px;
            max-width: 260px;
            max-height: 70px;
            background: #323338;
            padding: 10px;
            overflow: hidden;
            border-radius: 2px;
            margin-bottom: 40px;
        }

            .show-user .avatar {
                width: 50px;
                height: 50px;
                border-radius: 2px;
                display: inline-block;
                vertical-align: top;
            }

        .user-info {
            display: inline-block;
            vertical-align: top;
            margin-left: 4px;
            margin-top: 6px;
            overflow: hidden;
            width: 76%;
        }

            .user-info h5 {
                font-size: 16px;
                color: #b7b7b7;
                margin-top: 0;
                margin-bottom: 3px;
                font-weight: normal;
                text-overflow: ellipsis;
                overflow: hidden;
            }

            .user-info p {
                font-size: 14px;
                color: #676767;
                margin: 0;
                text-overflow: ellipsis;
                overflow: hidden;
            }
    </style>

</head>
<body>
    <div class="header">
        <div class="row">
            <div class="before">
            </div>
            <div class="large-12 columns">
                <a href="@Model.mainUrl">
                    <img src="@(Model.mainUrl + "/static/images/logo_img.png")" alt="">
                </a>
            </div>
            <div class="after">
            </div>
        </div>
    </div>
    <div class="content-container">
        <div class="row">
            <div class="before">
            </div>
            <div class="large-12 columns content">
                <div class="sect-title-bar">
                    <h6 class="sect-title">@Resources.Resources.Friend_request</h6>
                </div>
                <div class="sect-panel">
                    <h3>Dear <i>@Model.receiver_display_name</i>,</h3><br>
                    <p>
                        [Someone] wants to be your gaming buddy. How would you like to respond?<br><br>
                    </p>
                    <div class="show-user">
                        <a href="@(Model.mainUrl + "/friend")">
                            <img src="@(Model.mainUrl + Model.sender_avatar)" class="avatar">
                            <div class="user-info">
                                <h5>@Model.sender_display_name</h5>
                                <p>@Model.sender_username</p>
                            </div>
                        </a>
                    </div>
                    <p>- PlayToken Support</p>
                </div>
                <div class="sect-end-bar">
                </div>
            </div>
            <div class="after">
            </div>
        </div>
    </div>
</body>
</html>
