@{
    bool isUser = Request.Url.LocalPath.Contains("/admin/user");
    bool isTopupCard = Request.Url.LocalPath.Contains("/admin/topupCard");
    bool isDashboard = Request.Url.LocalPath.EndsWith("/admin");
    bool isGame = Request.Url.LocalPath.Contains("/admin/game");
    bool isStudio = Request.Url.LocalPath.Contains("/admin/studio");
    bool isExchange = Request.Url.LocalPath.Contains("/admin/exchange");
    bool isPaypal = Request.Url.LocalPath.Contains("/admin/paypal");
    bool isTransaction = Request.Url.LocalPath.Contains("/admin/transaction");
}
<div class="contain-to-grid">
    <nav class="top-bar" data-topbar role="navigation">
        <ul class="title-area">
            <li class="name">
                <h1><a href="/admin">GoPlay Admin</a></h1>
            </li>
            <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
        </ul>

        <section class="top-bar-section">
            <!-- Left Nav Section -->
            <ul class="left">
                <li class="@(isDashboard ? "active" : string.Empty)">
                    <a href="/admin">Dashboard</a>
                </li>
                @if (ViewContext.Controller.HasPermission("access_admin_game_page"))
                {
                    <li class="@(isGame ? "active" : string.Empty)">
                        <a href="/admin/game">Games</a>
                    </li>
                    <li class="@(isStudio ? "active" : string.Empty)">
                        <a href="/admin/studio">Studios</a>
                    </li>
                    <li class="@(isExchange ? "active" : string.Empty)">
                        <a href="/admin/exchange">Exchange Options</a>
                    </li>
                }

                @if (ViewContext.Controller.HasPermission("access_accountant_page"))
                {
                    <li class="@(isPaypal ? "active" : string.Empty)">
                        <a href="/admin/paypal">Paypal</a>
                    </li>
                }


                @if (ViewContext.Controller.HasPermission("access_game_accountant_page"))
                {
                    <li class="@(isTransaction ? "active" : string.Empty)">
                        <a href="/admin/transaction">Transactions</a>
                    </li>
                }

                @if (ViewContext.Controller.HasPermission("access_admin_accountant_page"))
                {

                    <li class="@(isTopupCard ? "active" : string.Empty)">
                        <a href="/admin/topupCard">Top Up Cards</a>
                    </li>
                    <li class="@(isUser ? "active" : string.Empty)">
                        <a href="/admin/user">Users</a>
                    </li>
                }
            </ul>

            <!-- Right Nav Section -->
            <ul class="right">
                <li><a href="/main">GoPlay website</a></li>
            </ul>
        </section>
    </nav>
</div>
