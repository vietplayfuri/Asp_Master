@model GToken.Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = @Resources.Resources.Reset_your_password;
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}

@section header{
    <div class="row">
        <div class="medium-6 medium-offset-3 columns">
            <h1 class="top-logo"><a href="@Url.Action("index", "main")" title="GToken @Resources.Resources.Home_page"><img src="/static/images/header_logo.png" alt="GToken"></a></h1>
        </div>
    </div>
}

@{
    foreach (var item in Model.Message.message)
    {
        <div data-alert class="alert-box app-@(item.Item1) custom" tabindex="0" aria-live="assertive" role="dialogalert">
            @Html.Raw(item.Item2)
            <a href="#" class="close">&times;</a>
        </div>
    }
}

<div class="row" ng-controller="ResetPasswordController as resetPasswordCtrl">
    <div class="medium-8 medium-offset-2 large-6 large-offset-3 columns">
        <div ng-hide="resetPasswordForm.isSubmitted">
            <div class="panel large">
                <!--reset-password-form-->
                <form name="resetPasswordForm" method="POST" action="/account/reset-password" novalidate ng-submit="resetPassword()">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="columns medium-12">
                            <h4>@Resources.Resources.Reset_your_password</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="columns medium-12">
                            <input class="field-with-errors  ng-valid-maxlength ng-dirty ng-valid-parse ng-valid ng-valid-required ng-touched" data-first-time-edit="true" id="username" maxlength="20" name="username" ng-model="username" placeholder="Username" required="required" type="text" value="">
                        </div>
                    </div>
                    <p class="row text-center">
                        <button class="button large" type="submit">@Resources.Resources.Submit</button>
                    </p>
                </form>
                <!--/reset-password-form-->
            </div>
            <p class="text-center">@Resources.Resources.Not_a_user<a href="/account/register/"> @Resources.Resources.Sign_up_here</a></p>
        </div>
    </div>
</div>

<!--/signup-section-->
@section foot_js
{
    <script src="/static/js/controllers/accountRegister.js"></script>
}
