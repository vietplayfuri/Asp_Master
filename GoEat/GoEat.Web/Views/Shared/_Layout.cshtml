@{
    var culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name.ToLowerInvariant();
}

<!DOCTYPE html>
<html lang="en" ng-app="gdineApp" class="html_classes">
<head>
    <meta http-equiv="X-UA-Compatible" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0,user-scalable=0" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0,user-scalable=no" />

    @Html.Partial("Includes/favicon_meta")

    <title>GDine - @ViewBag.Title</title>

    <base href="@Url.Action("Index", "Home")" />


    @RenderSection("open_graph_meta_tags", false)


    <link rel="stylesheet" href="~/bower_components/animate.css/animate.min.css" />
    @RenderSection("lib_stylesheets", false)

    <link rel="stylesheet" href="~/static/stylesheets/main.css" />
    @RenderSection("page_stylesheets", false)
    <link rel="stylesheet" href="/static/js/libs/foundation-datetimepicker/foundation-datepicker.css" />

    @if (culture != "en-us")
    {
        string url = "static/stylesheets/main_" + culture.Substring(0, 2) + ".css";
        <link rel="stylesheet" href="@url" />
    }


    <script src="~/bower_components/modernizr/modernizr.js"></script>
    @RenderSection("head_js_lib", false)
</head>
<body class="body_classes">
    <div class="main-container">
        @Html.Partial("includes/header")

        <div class="main-content">
            @RenderBody()
        </div>

        @Html.Partial("includes/footer")
    </div>
    <div class="body-filter hide">
    </div>


    <script src="~/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/bower_components/foundation/js/foundation.min.js"></script>
    <script src="/static/js/libs/foundation-datetimepicker/foundation-datetimepicker.js"></script>
    <script src="~/bower_components/angular/angular.min.js"></script>
    <script src="~/bower_components/angular-route/angular-route.js"></script>
    <script src="~/bower_components/angucomplete-alt/angucomplete-alt.js"></script>
    @RenderSection("foot_js_lib", false)

    <script src="~/static/js/app.js"></script>
    <script src="~/static/js/controllers.js"></script>
    <script type="text/javascript" src="~/static/js/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    @RenderSection("page_foot_js", false)


    @RenderSection("scripts", required: false)

    <script>
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
        m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-51518799-4', 'auto');
    ga('send', 'pageview');

    </script>
</body>
</html>
